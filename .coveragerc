[run]
source = functions
omit =
    # Lambda handlers with complex dependencies that require integration testing
    functions/scoring/score_package.py
    functions/collectors/refresh_dispatcher.py
    # Stripe webhook requires complex Stripe API mocking
    functions/api/stripe_webhook.py
    # Pure data definitions with no logic
    functions/shared/constants.py
    functions/shared/types.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
