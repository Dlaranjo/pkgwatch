      if (statusCodesRemaining) statusCodesRemaining.textContent = `${count} of 4 codes remaining`;
      if (statusGeneratedAt && recoveryCodesStatus.generated_at) {
        statusGeneratedAt.textContent = `Generated ${getRelativeTime(recoveryCodesStatus.generated_at)}`;
      }
      if (statusGenerateText) statusGenerateText.textContent = 'Regenerate Codes';
      statusIconShield?.classList.add('hidden');
      statusIconWarning?.classList.remove('hidden');
      statusLowCodesWarning?.classList.remove('hidden');
    } else {
      // Healthy state
      const count = recoveryCodesStatus.codes_remaining;
      if (statusCodesRemaining) statusCodesRemaining.textContent = `${count} of 4 codes remaining`;
      if (statusGeneratedAt && recoveryCodesStatus.generated_at) {
        statusGeneratedAt.textContent = `Generated ${getRelativeTime(recoveryCodesStatus.generated_at)}`;
      }
      if (statusGenerateText) statusGenerateText.textContent = 'Regenerate Codes';
      statusIconShield?.classList.remove('hidden');
      statusIconWarning?.classList.add('hidden');
      statusLowCodesWarning?.classList.add('hidden');
    }
  }

  // Recovery banner logic with escalating persistence
  // - 1st dismiss: Returns next session
  // - 2nd dismiss: Returns after 24 hours
  // - 3rd dismiss: Banner becomes non-dismissible
  function maybeShowRecoveryBanner(): void {
    // Don't show if user has recovery codes
    if (recoveryCodesStatus.has_codes) {
      setupRecoveryBanner?.classList.add('hidden');
      // Reset dismissal count when user generates codes (so if they use all codes later, fresh start)
      localStorage.removeItem('pkgwatch_recovery_banner_dismissed');
      sessionStorage.removeItem('pkgwatch_banner_dismissed_this_session');
      return;
    }

    // Check localStorage for dismissal history
    const dismissalData = JSON.parse(localStorage.getItem('pkgwatch_recovery_banner_dismissed') || '{"count": 0, "lastDismissed": 0}');
    const dismissCount = dismissalData.count || 0;
    const lastDismissed = dismissalData.lastDismissed || 0;
    const now = Date.now();

    // Check if banner was already dismissed in this session
    const dismissedThisSession = sessionStorage.getItem('pkgwatch_banner_dismissed_this_session') === 'true';

    // Escalating persistence:
    if (dismissCount === 0) {
      // Never dismissed - show banner with dismiss button
      setupRecoveryBanner?.classList.remove('hidden');
    } else if (dismissCount === 1) {
      // Dismissed once - show again on next session only
      if (!dismissedThisSession) {
        setupRecoveryBanner?.classList.remove('hidden');
      }
    } else if (dismissCount === 2) {
      // Dismissed twice - only show after 24 hours
      const twentyFourHours = 24 * 60 * 60 * 1000;
      if (now - lastDismissed > twentyFourHours && !dismissedThisSession) {
        setupRecoveryBanner?.classList.remove('hidden');
      }
    } else {
      // Dismissed 3+ times - make banner non-dismissible
      setupRecoveryBanner?.classList.remove('hidden');
      dismissRecoveryBanner?.classList.add('hidden'); // Hide dismiss button
    }
  }

  function handleDismissRecoveryBanner(): void {
    setupRecoveryBanner?.classList.add('hidden');

    // Mark as dismissed in current session (prevents re-showing on page refresh)
    sessionStorage.setItem('pkgwatch_banner_dismissed_this_session', 'true');

    // Update dismissal count in localStorage
    const dismissalData = JSON.parse(localStorage.getItem('pkgwatch_recovery_banner_dismissed') || '{"count": 0, "lastDismissed": 0}');
    dismissalData.count = (dismissalData.count || 0) + 1;
    dismissalData.lastDismissed = Date.now();
    localStorage.setItem('pkgwatch_recovery_banner_dismissed', JSON.stringify(dismissalData));
  }

  function handleSetupRecoveryFromBanner(): void {
    // Open recovery codes modal in status mode
    openRecoveryCodesStatusModal();
  }

  async function generateRecoveryCodes(): Promise<string[] | null> {
    try {
      const response = await fetchWithAuth(`${API_BASE}/account/recovery-codes`, {
        method: 'POST',
        body: JSON.stringify({}),
      });
      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error?.message || 'Failed to generate recovery codes');
      }
      const data = await response.json();
      return data.codes || null;
    } catch (error: any) {
      if (error.message === 'UNAUTHORIZED') {
        showAuthError();
      } else {
        showInlineError(error.message || 'Failed to generate recovery codes');
      }
      return null;
    }
  }

  // Open modal in status view mode
  function openRecoveryCodesStatusModal(): void {
    if (!recoveryCodesModal) return;

    recoveryModalMode = 'status';
    updateRecoveryStatusModalUI();

    // Show status view, hide codes view
    recoveryModalWarningHeader?.classList.add('hidden');
    recoveryModalStatusHeader?.classList.remove('hidden');
    recoveryModalStatusView?.classList.remove('hidden');
    recoveryModalCodesView?.classList.add('hidden');

    // Enable Done button (can close from status view)
    if (closeRecoveryModalBtn) closeRecoveryModalBtn.disabled = false;

    recoveryCodesModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    // Focus the generate button for keyboard accessibility
    statusGenerateBtn?.focus();
  }

  // Open modal in codes view mode (after generating codes)
  function openRecoveryCodesModal(codes: string[]): void {
    if (!recoveryCodesModal || !recoveryCodesGrid) return;

    recoveryModalMode = 'codes';
    currentRecoveryCodes = codes;

    // Show codes view, hide status view
    recoveryModalWarningHeader?.classList.remove('hidden');
    recoveryModalStatusHeader?.classList.add('hidden');
    recoveryModalStatusView?.classList.add('hidden');
    recoveryModalCodesView?.classList.remove('hidden');

    // Populate codes grid
    recoveryCodesGrid.innerHTML = codes.map((code, i) =>
      `<div class="p-2 bg-zinc-900 border border-zinc-800 rounded text-center text-emerald-400">${escapeHtml(code)}</div>`
    ).join('');

    // Reset checkbox and button (must confirm before closing)
    if (confirmCodesSaved) confirmCodesSaved.checked = false;
    if (closeRecoveryModalBtn) closeRecoveryModalBtn.disabled = true;

    // Reset copy button
    const copyAllText = document.getElementById('copy-all-text');
    if (copyAllText) copyAllText.textContent = 'Copy All';

    recoveryCodesModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    // Focus the copy all button for keyboard accessibility
    copyAllCodesBtn?.focus();
  }

  function closeRecoveryCodesModal(): void {
    recoveryCodesModal?.classList.add('hidden');
    document.body.style.overflow = '';
    currentRecoveryCodes = [];
    recoveryCodesBtn?.focus();
  }

  function openRegenerateWarningModal(): void {
    regenerateWarningModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    cancelRegenerateBtn?.focus();
  }

  function closeRegenerateWarningModal(): void {
    regenerateWarningModal?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  async function handleGenerateCodesFromModal(): Promise<void> {
    // If codes already exist, show warning first
    if (recoveryCodesStatus.has_codes) {
      openRegenerateWarningModal();
      return;
    }

    await doGenerateCodesFromModal();
  }

  async function doGenerateCodesFromModal(): Promise<void> {
    if (statusGenerateBtn) (statusGenerateBtn as HTMLButtonElement).disabled = true;
    statusGenerateText?.classList.add('hidden');
    statusGenerateLoading?.classList.remove('hidden');

    closeRegenerateWarningModal();

    const codes = await generateRecoveryCodes();

    if (codes) {
      // Refresh status
      recoveryCodesStatus = {
        has_codes: true,
        codes_remaining: codes.length,
        generated_at: new Date().toISOString(),
      };
      updateRecoveryStatusModalUI();

      // Switch to codes view in the same modal
      openRecoveryCodesModal(codes);
    }

    if (statusGenerateBtn) (statusGenerateBtn as HTMLButtonElement).disabled = false;
    statusGenerateText?.classList.remove('hidden');
    statusGenerateLoading?.classList.add('hidden');
  }

  async function handleCopyAllCodes(): Promise<void> {
    if (currentRecoveryCodes.length === 0) return;

    const codesText = `PkgWatch Recovery Codes\n${'='.repeat(30)}\n\n${currentRecoveryCodes.map((c, i) => `${i + 1}. ${c}`).join('\n')}\n\nStore these codes securely. Each code can only be used once.`;

    const success = await copyToClipboard(codesText);

    if (success) {
      const copyAllText = document.getElementById('copy-all-text');
      if (copyAllText) {
        copyAllText.textContent = 'Copied!';
        setTimeout(() => {
          copyAllText.textContent = 'Copy All';
        }, 2000);
      }
    }
  }

  function handleDownloadCodes(): void {
    if (currentRecoveryCodes.length === 0) return;

    const codesText = `PkgWatch Recovery Codes
${'='.repeat(30)}
Generated: ${new Date().toISOString()}

${currentRecoveryCodes.map((c, i) => `${i + 1}. ${c}`).join('\n')}

IMPORTANT:
- Store these codes in a secure location
- Each code can only be used once
- Use these codes to recover your account if you lose email access

https://pkgwatch.dev`;

    // Create and trigger download
    const blob = new Blob([codesText], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.href = url;
    link.download = 'pkgwatch-recovery-codes.txt';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);

    // Update button text
    if (downloadCodesText) {
      downloadCodesText.textContent = 'Downloaded!';
      setTimeout(() => {
        downloadCodesText.textContent = 'Download .txt';
      }, 2000);
    }
  }

  // Set up focus traps for recovery modals
  if (recoveryCodesModal) trapFocus(recoveryCodesModal);
  if (regenerateWarningModal) trapFocus(regenerateWarningModal);

  // Event listeners for recovery codes
  recoveryCodesBtn?.addEventListener('click', openRecoveryCodesStatusModal);
  statusGenerateBtn?.addEventListener('click', handleGenerateCodesFromModal);
  copyAllCodesBtn?.addEventListener('click', handleCopyAllCodes);
  downloadCodesBtn?.addEventListener('click', handleDownloadCodes);

  confirmCodesSaved?.addEventListener('change', () => {
    // Only affects codes view mode
    if (recoveryModalMode === 'codes' && closeRecoveryModalBtn) {
      closeRecoveryModalBtn.disabled = !confirmCodesSaved.checked;
    }
  });

  closeRecoveryModalBtn?.addEventListener('click', () => {
    // In status mode, can always close; in codes mode, must confirm first
    if (recoveryModalMode === 'status' || confirmCodesSaved?.checked) {
      closeRecoveryCodesModal();
    }
  });

  cancelRegenerateBtn?.addEventListener('click', closeRegenerateWarningModal);
  confirmRegenerateBtn?.addEventListener('click', doGenerateCodesFromModal);

  // Close modals on backdrop click
  document.getElementById('recovery-modal-backdrop')?.addEventListener('click', () => {
    if (recoveryModalMode === 'status' || confirmCodesSaved?.checked) {
      closeRecoveryCodesModal();
    }
  });
  document.getElementById('regenerate-modal-backdrop')?.addEventListener('click', closeRegenerateWarningModal);

  // Recovery banner event listeners
  dismissRecoveryBanner?.addEventListener('click', handleDismissRecoveryBanner);
  setupRecoveryLink?.addEventListener('click', handleSetupRecoveryFromBanner);

  // Clean up intervals on page unload to prevent memory leaks
  window.addEventListener('beforeunload', () => {
    stopCountdown();
  });

  // Also clean up on page visibility change (e.g., user switches tabs and doesn't return)
  document.addEventListener('visibilitychange', () => {
    if (document.visibilityState === 'hidden' && countdownInterval) {
      // If user hides the page while countdown is running, the modal will close
      // when they return if time expired
    }
  });

  // Start loading
  init();

  // Load recovery codes status after init
  // Load recovery codes status and show banner for users without codes
  loadRecoveryCodesStatus()
    .then(() => maybeShowRecoveryBanner())
    .catch(console.error);
</script>
