          showInlineError('Your API key was already displayed. You can view your keys in the table above (only the prefix is shown for security). Use the Recovery Codes button to generate recovery codes.');
        }
      }

    } catch (error: any) {
      console.error('Failed to load dashboard:', error);
      showAuthError();
    }
  }

  // Focus trap utility for accessibility
  function trapFocus(modal: HTMLElement): void {
    const focusable = modal.querySelectorAll<HTMLElement>(
      'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
    );
    const first = focusable[0];
    const last = focusable[focusable.length - 1];

    modal.addEventListener('keydown', (e) => {
      if (e.key !== 'Tab') return;
      if (e.shiftKey && document.activeElement === first) {
        e.preventDefault();
        last?.focus();
      } else if (!e.shiftKey && document.activeElement === last) {
        e.preventDefault();
        first?.focus();
      }
    });
  }

