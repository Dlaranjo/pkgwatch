---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | PkgWatch" mainClass="flex items-center justify-center min-h-[calc(100vh-160px)]">
    <div class="text-center px-4">
      <h1 class="text-8xl font-bold text-white mb-4">404</h1>
      <p class="text-xl text-zinc-400 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="btn-gradient text-white px-6 py-3 rounded-lg font-semibold transition inline-block"
        >
          Go Home
        </a>
        <a
          href="/docs"
          class="bg-zinc-800 text-white hover:bg-zinc-700 px-6 py-3 rounded-lg font-semibold transition inline-block"
        >
          View Docs
        </a>
      </div>
    </div>
</Layout>
