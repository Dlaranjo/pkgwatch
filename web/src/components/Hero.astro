---
interface Props {
  formId?: string
}

const { formId = 'YOUR_FORM_ID' } = Astro.props
---

<section class="pt-8 pb-12 md:pt-16 md:pb-20 animate-fade-in-up stagger-1 opacity-0">
  <div class="text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 text-sm rounded-full bg-green-500/10 border border-green-500/30 text-green-400">
      <span class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse-dot"></span>
      <span>API Live Now</span>
    </div>

    <!-- Headline -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 leading-[1.1]">
      <span class="sr-only">PkgWatch: </span>
      Know which packages will
      <span class="gradient-text"> fail before</span>
      they break your build
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-zinc-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      Predictive health scores for npm and Python packages. Get warned about abandonment risk months before it becomes your 3am incident.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
      <a
        href="#demo"
        class="btn-gradient px-8 py-4 text-base font-semibold text-white rounded-xl whitespace-nowrap inline-flex items-center justify-center gap-2"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="5 3 19 12 5 21 5 3"/>
        </svg>
        Try Live Demo
      </a>
      <a
        href="/docs"
        class="px-8 py-4 text-base font-semibold text-white rounded-xl whitespace-nowrap inline-flex items-center justify-center gap-2 bg-[var(--color-bg-card)] border border-[var(--color-border-card)] hover:border-blue-500/50 transition-all"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14 2 14 8 20 8"/>
          <line x1="16" y1="13" x2="8" y2="13"/>
          <line x1="16" y1="17" x2="8" y2="17"/>
        </svg>
        View API Docs
      </a>
    </div>

    <!-- Stats -->
    <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-8 text-sm text-zinc-500">
      <div class="flex items-center gap-2">
        <span class="text-white font-semibold">30+</span>
        <span>signals analyzed per package</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-white font-semibold">npm + PyPI</span>
        <span>ecosystems</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-white font-semibold">Free,</span>
        <span>no signup required</span>
      </div>
    </div>
  </div>
</section>
