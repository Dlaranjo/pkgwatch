{
  "name": "@pkgwatch/action",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=cjs --minify --sourcemap --outfile=dist/index.js --define:__VERSION__=\\\"$(node -p \"require('./package.json').version\")\\\"",
    "test": "vitest run",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@pkgwatch/api-client": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "20.17.12",
    "esbuild": "0.24.2",
    "typescript": "5.7.3",
    "vitest": "2.1.8"
  }
}
