---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Sign In | PkgWatch">
  <Navbar />

  <main id="main-content" class="max-w-md mx-auto px-4 py-24">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-white mb-4">Sign In to PkgWatch</h1>
      <p class="text-zinc-400">
        Enter your email to receive a magic link
      </p>
    </div>

    <form id="login-form" class="space-y-6">
      <div>
        <label for="email" class="block text-sm font-medium text-zinc-300 mb-2">
          Email Address
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          autocomplete="email"
          aria-describedby="error-message"
          class="w-full px-4 py-3 bg-[#0d0d10] border border-zinc-800 rounded-lg
                 text-white placeholder-zinc-500 focus:border-emerald-500
                 focus:ring-1 focus:ring-emerald-500 outline-none transition"
          placeholder="you@company.com"
        />
      </div>

      <button
        type="submit"
        class="w-full btn-gradient px-6 py-3 rounded-lg font-semibold
               text-white transition hover:opacity-90 disabled:opacity-50"
      >
        <span id="btn-text">Send Magic Link</span>
        <span id="btn-loading" class="hidden">Sending...</span>
      </button>

      <p id="error-message" class="text-red-400 text-sm hidden" role="alert" aria-live="polite"></p>
      <p id="success-message" class="text-emerald-400 text-sm hidden" role="status" aria-live="polite"></p>
    </form>

    <div class="mt-8 text-center text-sm text-zinc-500">
      Don't have an account?{' '}
      <a href="/signup" class="text-emerald-400 hover:text-emerald-300">
        Sign up
      </a>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  const API_BASE = 'https://api.pkgwatch.laranjo.dev';

  const form = document.getElementById('login-form');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text');
  const btnLoading = document.getElementById('btn-loading');
  const errorMsg = document.getElementById('error-message');
  const successMsg = document.getElementById('success-message');

  // State for timeout tracking
  let buttonCooldownTimeoutId: number | null = null;

  // Cleanup function to prevent memory leaks on navigation
  window.addEventListener('beforeunload', () => {
    if (buttonCooldownTimeoutId) clearTimeout(buttonCooldownTimeoutId);
  });

  // Handle button cooldown after success
  function startButtonCooldown(seconds: number): void {
    if (!submitBtn || !btnText) return;

    // Clear any existing cooldown
    if (buttonCooldownTimeoutId) {
      clearTimeout(buttonCooldownTimeoutId);
    }

    submitBtn.disabled = true;
    let remaining = seconds;

    const updateCooldown = () => {
      btnText.textContent = `Send again in ${remaining}s`;
      remaining--;

      if (remaining < 0) {
        submitBtn.disabled = false;
        btnText.textContent = 'Send Magic Link';
        buttonCooldownTimeoutId = null;
      } else {
        buttonCooldownTimeoutId = window.setTimeout(updateCooldown, 1000);
      }
    };
    updateCooldown();
  }

  // Predefined error messages mapped from error codes (prevents URL-based phishing)
  const ERROR_MESSAGES: Record<string, string> = {
    'invalid_token': 'Invalid or expired login link. Please request a new one.',
    'token_expired': 'Your sign-in link has expired (links are valid for 15 minutes). Please request a new one.',
    'token_already_used': 'This login link has already been used. Please request a new one.',
    'missing_token': 'Login token is required.',
    'internal_error': 'Something went wrong. Please try again.',
  };

  // Check for error params from auth callback redirects
  // SECURITY: Only display predefined messages based on error code to prevent phishing
  function handleErrorParams(): void {
    const params = new URLSearchParams(window.location.search);
    const errorCode = params.get('error');

    if (errorCode && errorMsg) {
      // Only display known error messages - ignore arbitrary 'message' param
      const message = ERROR_MESSAGES[errorCode] || 'An error occurred. Please try again.';
      errorMsg.textContent = message;
      errorMsg.classList.remove('hidden');
      // Clean up URL
      window.history.replaceState({}, '', '/login');
    }
  }

  // Run on page load
  handleErrorParams();

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = (document.getElementById('email') as HTMLInputElement).value;

    // Disable button and show loading state
    if (submitBtn) submitBtn.disabled = true;
    btnText?.classList.add('hidden');
    btnLoading?.classList.remove('hidden');
    errorMsg?.classList.add('hidden');
    successMsg?.classList.add('hidden');

    try {
      const response = await fetch(`${API_BASE}/auth/magic-link`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email }),
      });

      const data = await response.json();

      if (response.ok) {
        if (successMsg) {
          successMsg.textContent = data.message || 'Check your email (including spam folder) for a magic link to sign in!';
        }
        successMsg?.classList.remove('hidden');
        form?.reset();
        // Show loading state briefly then start cooldown
        btnLoading?.classList.add('hidden');
        btnText?.classList.remove('hidden');
        startButtonCooldown(30);
      } else {
        if (errorMsg) errorMsg.textContent = data.error?.message || 'Something went wrong';
        errorMsg?.classList.remove('hidden');
        // Re-enable button on error
        if (submitBtn) submitBtn.disabled = false;
        btnText?.classList.remove('hidden');
        btnLoading?.classList.add('hidden');
      }
    } catch (error) {
      if (errorMsg) errorMsg.textContent = 'Network error. Please try again.';
      errorMsg?.classList.remove('hidden');
      // Re-enable button on error
      if (submitBtn) submitBtn.disabled = false;
      btnText?.classList.remove('hidden');
      btnLoading?.classList.add('hidden');
    }
  });
</script>
