{
  "name": "@dephealth/cli",
  "version": "1.1.0",
  "description": "Check npm package health scores from the command line",
  "author": "DepHealth",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./api": "./dist/api.js"
  },
  "bin": {
    "dephealth": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
