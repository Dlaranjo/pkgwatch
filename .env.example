# PkgWatch Environment Variables
# Copy this file to .env and fill in values

# =============================================================================
# AWS Configuration
# =============================================================================

# AWS region for deployment
AWS_REGION=us-east-1

# =============================================================================
# DynamoDB Tables
# =============================================================================

# Package health data table
PACKAGES_TABLE=pkgwatch-packages

# API keys and user data table
API_KEYS_TABLE=pkgwatch-api-keys

# =============================================================================
# S3 Storage
# =============================================================================

# Bucket for raw collected data
RAW_DATA_BUCKET=pkgwatch-raw-data

# =============================================================================
# SQS Queues
# =============================================================================

# Main package collection queue
PACKAGE_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/pkgwatch-package-queue

# Dead letter queue for failed collections
DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789/pkgwatch-package-dlq

# =============================================================================
# Secrets (AWS Secrets Manager ARNs)
# =============================================================================

# Session signing secret
SESSION_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:pkgwatch/session-secret

# Stripe API key secret
STRIPE_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:pkgwatch/stripe-api-key

# Stripe webhook secret
STRIPE_WEBHOOK_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789:secret:pkgwatch/stripe-webhook-secret

# =============================================================================
# External APIs (Optional)
# =============================================================================

# GitHub personal access token for higher rate limits
# Without this, uses unauthenticated API (60 req/hour)
# With token: 5000 req/hour
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Development Settings
# =============================================================================

# Enable additional CORS origins for local development
# Set to "true" to allow localhost:3000, localhost:4321
ALLOW_DEV_CORS=false

# =============================================================================
# Stripe Configuration (for infrastructure deployment)
# =============================================================================

# CDK deployment environment
CDK_ENV=development

# Stripe price IDs for subscription tiers
STRIPE_PRICE_STARTER=price_xxxxxxxxxx
STRIPE_PRICE_PRO=price_xxxxxxxxxx
STRIPE_PRICE_BUSINESS=price_xxxxxxxxxx

# =============================================================================
# CLI Configuration (for @pkgwatch/cli)
# =============================================================================

# API key for CLI (can also use PKGWATCH_API_KEY)
# PKGWATCH_API_KEY=pw_xxxxxxxxxx
