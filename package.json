{
  "name": "dephealth-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "DepHealth - Dependency Health Intelligence Platform",
  "workspaces": [
    "packages/*",
    "cli",
    "action"
  ],
  "scripts": {
    "build": "npm run build -w @dephealth/api-client && npm run build -w @dephealth/cli && npm run build -w @dephealth/action",
    "build:api-client": "npm run build -w @dephealth/api-client",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "engines": {
    "node": ">=20"
  }
}
